<div class="container">
  <h1 class="text-center m-4">🎞️ Movie List</h1>
    <ul class="cards list-group mb-3">
      <% @lists.each do |list| %>
        <li class="list-group-item">
          <% if list.photo.attached? %>
            <%= cl_image_tag list.photo.key, alt: "image", width: 200 %>
          <% end %>
          <%= link_to list.name, list_path(list), class: "category" %>
        </li>
      <% end %>
    </ul>
    <div class="bottom">
    <%= link_to "Add a list", new_list_path, class: "btn btn-ghost" %>
    </div>
</div>
